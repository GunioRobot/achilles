= section_for(@scan) do
  - form_for(@scan) do |f|
    %dl
      = form_field('Name', f.text_field(:name))
      = form_field('Start At', f.text_field(:starts_at))

      %dt
        %div= 'Locations'
      %dd
        %ul
          - for location in @locations
            %li
              = check_box_tag('scan[location_ids][]', location.id, (@scan.locations.include?(location)))
              = location

    = f.submit('Create')
