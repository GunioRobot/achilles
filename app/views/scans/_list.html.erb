<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Starts At</th>
      <th>Locations</th>
      <th>State</th>
      <th>Hosts</th>
    </tr>
  </thead>
  
  <tbody>
<% for scan in scans %>
    <tr>
      <td><%=h scan.name %></td>
      <td><%=h scan.starts_at %></td>
      <td><%=h scan.location_names %></td>
      <td><%=h scan.state.capitalize %></td>
      <td><%=h scan.hosts_count %></td>
      <td><%= link_to 'Show', scan %></td>
    </tr>
<% end %>
  </tbody>
</table>