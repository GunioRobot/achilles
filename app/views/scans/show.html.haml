= section_for(@scan) do
  %dl
    %dt
      %div= 'Starts At'
    %dd= @scan.starts_at
    
    %dt
      %div= 'Last Updated'
    %dd= @scan.updated_at
  
    %dt
      %div= 'State'
    %dd= @scan.state.capitalize
  
    %dt
      %div= 'Locations'
    %dd= @scan.location_names

    - if @scan.running? || @scan.finished?
      %dt
        %div= 'Output'
      %dd= find_and_preserve("<pre>#{@scan.output}</pre>")

-if @scan.finished?
  = section_for(@hosts) do
    = render(:partial => 'hosts/list', :locals => { :hosts => @hosts })
