.section
  .header
    %h1
      %ul
        %li= link_to('Hosts', hosts_path)
        %li= link_to(@vulnerability.host.name, host_path(@vulnerability.host))
        %li= @vulnerability.name
  
  %dl
    %dt
      %div= 'Summary'
    %dd= @vulnerability.summary

  %dl.left
    %dt
      %div= 'Severity'
    %dd= @vulnerability.severity

    %dt
      %div= 'Status'
    %dd= @vulnerability.status

  %dl.right
    %dt
      %div= 'Service'
    %dd= @vulnerability.service

    %dt
      %div= 'Plugin'
    %dd= link_to(@vulnerability.plugin.name, plugin_path(@vulnerability.plugin))

  %dl
    %dt
      %div= 'Data'
    %dd= find_and_preserve("<pre>#{@vulnerability.data}</pre>")
  
    %dt
      %div= 'Description'
    %dd= find_and_preserve("<pre>#{@vulnerability.description}</pre>")
      
    %dt
      %div= 'Evaluation'
    %dd= find_and_preserve("<pre>#{@vulnerability.evaluation}</pre>")
    
    %dt
      %div= 'Remediation'
    %dd= find_and_preserve("<pre>#{@vulnerability.remediation}</pre>")

  .footer
    = link_to('Edit', edit_vulnerability_path(@vulnerability))
