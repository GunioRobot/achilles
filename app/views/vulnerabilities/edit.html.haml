.section
  .header
    %h1
      %ul
        %li= link_to('Hosts', hosts_path)
        %li= link_to(@vulnerability.host.name, host_path(@vulnerability.host))
        %li= link_to(@vulnerability.name, vulnerability_path(@vulnerability))

  - form_for(@vulnerability) do |form|
    %dl.editing
      %dt
        %div= 'Severity'
      %dd= form.select(:severity_id, Severity.find(:all, :order => :value).map { |severity| [severity.name, severity.id] })

    .footer
      = form.submit('Update')
