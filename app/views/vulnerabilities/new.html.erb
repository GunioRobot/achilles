<h1>New vulnerability</h1>

<%= error_messages_for :vulnerability %>

<% form_for(@vulnerability) do |f| %>
  <p>
    <b>Protocol</b><br />
    <%= f.text_field :protocol %>
  </p>

  <p>
    <b>Port</b><br />
    <%= f.text_field :port %>
  </p>

  <p>
    <b>Service</b><br />
    <%= f.text_field :service %>
  </p>

  <p>
    <b>Severity</b><br />
    <%= f.text_field :severity %>
  </p>

  <p>
    <b>Data</b><br />
    <%= f.text_area :data %>
  </p>

  <p>
    <b>Plugin</b><br />
    <%= f.text_field :plugin_id %>
  </p>

  <p>
    <b>Host</b><br />
    <%= f.text_field :host_id %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', vulnerabilities_path %>
