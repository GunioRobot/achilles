!!! XML
!!! Strict
%html{html_attrs}
  %head
    %meta{ :'http-equiv' => 'content-type', :content => 'text/html;charset=UTF-8' }
    %title= 'Achilles'
    %link{ :href => '/stylesheets/reset.css', :media => 'screen', :rel => 'stylesheet', :type => 'text/css' }
    = stylesheets
  %body
    #header
      %h1= 'Achilles'

    #nav
      %ul
        %li{ :class => (controller.kind_of?(ScansController) ? 'active' : 'inactive') }= link_to('Scans', scans_path)
        %li{ :class => (controller.kind_of?(HostsController) || controller.kind_of?(VulnerabilitiesController) ? 'active' : 'inactive') }= link_to('Hosts', hosts_path)
        %li{ :class => (controller.kind_of?(PluginsController) ? 'active' : 'inactive') }= link_to('Plugins', plugins_path)
        %li{ :class => (controller.kind_of?(SeveritiesController) ? 'active' : 'inactive') }= link_to('Severities', severities_path)

    - for key, value in flash
      .flash{ :id=> key }= value

    #article
      = yield
