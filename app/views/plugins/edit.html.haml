.section
  .header
    %h1='Editing Plugin'

  - form_for(@plugin) do |form|
    %dl.editing
      %dt
        %div= 'Name'
      %dd= form.text_field(:name)

      %dt
        %div= 'Summary'
      %dd= form.text_field(:summary)

      %dt
        %div= 'Family'
      %dd= form.select(:family_id, Family.find(:all).map { |family| [family.name, family.id] })

      %dt
        %div= 'Risk'
      %dd= form.select(:risk_id, Risk.find(:all).map { |risk| [risk.name, risk.id] })

      %dt
        %div= 'Classification'
      %dd= form.text_field(:classification)

      %dt
        %div= 'Description'
      %dd=find_and_preserve(form.text_area(:description))

      %dt
        %div= 'Evaluation'
      %dd=find_and_preserve(form.text_area(:evaluation))

      %dt
        %div= 'Remediation'
      %dd=find_and_preserve(form.text_area(:remediation))

    = form.submit('Update')

  = link_to('Show', @plugin)
  = link_to('Back', plugins_path)
